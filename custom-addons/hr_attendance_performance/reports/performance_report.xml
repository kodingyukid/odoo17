<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action -->
    <record id="action_report_attendance_performance" model="ir.actions.report">
        <field name="name">Performance Report</field>
        <field name="model">hr.attendance.performance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_attendance_performance.report_performance_template</field>
        <field name="report_file">hr_attendance_performance.report_performance_template</field>
        <field name="binding_model_id" ref="model_hr_attendance_performance"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Template -->
    <template id="report_performance_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <div class="text-center mb-4">
                            <h2>Attendance Performance Report</h2>
                        </div>

                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Employee:</strong> <span t-field="doc.employee_id.name"/><br/>
                                <strong>Department:</strong> <span t-field="doc.employee_id.department_id.name"/><br/>
                                <strong>Job Title:</strong> <span t-field="doc.employee_id.job_title"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Period:</strong> <span t-field="doc.start_date"/> to <span t-field="doc.end_date"/><br/>
                                <strong>Date Printed:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                            </div>
                        </div>

                        <table class="table table-sm table-bordered mb-4">
                            <thead class="thead-light">
                                <tr>
                                    <th>Month</th>
                                    <th class="text-right">Total Hours</th>
                                    <th class="text-right">Avg Hours/Week</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.line_ids" t-as="line">
                                    <td><span t-field="line.month_name"/></td>
                                    <td class="text-right"><span t-field="line.total_hours" t-options='{"widget": "float_time"}'/></td>
                                    <td class="text-right"><span t-field="line.average_weekly_hours" t-options='{"widget": "float", "precision": 2}'/></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row mb-4">
                            <div class="col-6">
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Total Hours:</strong></td>
                                        <td class="text-right"><span t-field="doc.total_hours" t-options='{"widget": "float_time"}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Duration (Weeks):</strong></td>
                                        <td class="text-right"><span t-field="doc.duration_weeks" t-options='{"widget": "float", "precision": 2}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Average Hours/Week:</strong></td>
                                        <td class="text-right"><span t-field="doc.average_weekly_hours" t-options='{"widget": "float", "precision": 2}'/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <div class="card">
                                    <div class="card-header bg-primary text-white text-center">
                                        <strong>Final Status</strong>
                                    </div>
                                    <div class="card-body text-center">
                                        <h3 t-if="doc.status_rule_id" t-field="doc.status_rule_id.name" class="text-primary"/>
                                        <h3 t-else="" class="text-muted">No Status</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div t-if="doc.notes" class="mb-4">
                            <strong>Notes / Recommendations:</strong>
                            <div class="p-3 border bg-light rounded">
                                <span t-field="doc.notes"/>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
