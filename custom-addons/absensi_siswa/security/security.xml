<odoo>
    <!-- Rule untuk staff biasa -->
    <record id="staff_journal_rule_user" model="ir.rule">
        <field name="name">Staff Journal: Own Only</field>
        <field name="model_id" ref="model_staff_journal"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>


    <!-- Rule untuk HR Manager -->
    <record id="staff_journal_rule_manager" model="ir.rule">
        <field name="name">Staff Journal: Manager All Access</field>
        <field name="model_id" ref="model_staff_journal"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
