<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_absensi_drive_attachment_form" model="ir.ui.view">
        <field name="name">absensi.drive.attachment.form</field>
        <field name="model">absensi.drive.attachment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_link" type="object" string="Buka di Drive" icon="fa-external-link" class="oe_stat_button"/>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="file_id"/>
                        <field name="url" widget="url"/>
                        <field name="thumbnail_url" widget="url"/>
                        <field name="absensi_line_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_absensi_drive_attachment_tree" model="ir.ui.view">
        <field name="name">absensi.drive.attachment.tree</field>
        <field name="model">absensi.drive.attachment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="absensi_line_id"/>
                <button name="action_open_link" string="Buka" type="object" icon="fa-external-link"/>
            </tree>
        </field>
    </record>

    <record id="view_absensi_drive_attachment_kanban" model="ir.ui.view">
        <field name="name">absensi.drive.attachment.kanban</field>
        <field name="model">absensi.drive.attachment</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="thumbnail_url"/>
                <field name="url"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="record.thumbnail_url.value" alt="Thumbnail" t-if="record.thumbnail_url.value"/>
                                <img src="/web/static/src/img/icons/unknown.svg" alt="File" t-else=""/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>
                                    <a t-att-href="record.url.value" target="_blank">Buka File</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
